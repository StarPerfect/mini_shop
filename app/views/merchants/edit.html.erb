<p><%= link_to 'Merchants Index', '/merchants' %></p>
<h1>Update <%= @merchant.id %></h1>
<%= form_tag("/merchants/#{@merchant.id}", method: :patch) do %>
  <p><%= label_tag :name %>
  <%= text_field_tag :name, @merchant.name %></p>
  <p><%= label_tag :address %>
  <%= text_field_tag :address, @merchant.address %></p>
  <p><%= label_tag :city %>
  <%= text_field_tag :city, @merchant.city %></p>
  <p><%= label_tag :state %>
  <%= text_field_tag :state, @merchant.state %></p>
  <p><%= label_tag :zip %>
  <%= text_field_tag :zip, @merchant.zip %></p>
  <%= submit_tag 'Update Merchant' %>
<% end %>
