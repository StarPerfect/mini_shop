<h2>Edit Item</h2>
<%= form_tag "/items/#{@item.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, nil, placeholder: "#{@item.name}" %>
  <%= label_tag :price %>
  <%= text_field_tag :price, nil, placeholder: "#{@item.price}" %>
  <%= label_tag :description %>
  <%= text_field_tag :description, nil, placeholder: "#{@item.description}" %>
  <%= label_tag :image %>
  <%= text_field_tag :image, nil, placeholder: "#{@item.image}" %>
  <%= label_tag :inventory %>
  <%= text_field_tag :inventory, nil, placeholder: "#{@item.inventory}" %>
  <%= submit_tag 'Update Item' %>
<% end %>
